{% extends "layout.jinja2" %}
{% import "_forms.jinja2" as forms with context %}

{% block content %}

{% call forms.render_form(form) %}

    <legend>Send someone the photo '{{ photo.title }}'</legend>

    <div class="controls">
       {{ form.name.label }} 
       {{ form.name }}
    </div>


    <div class="controls">
       {{ form.email.label }} 
       {{ form.email }}
    </div>

    {{ form.submit(class="btn") }}
    
{% endcall %}

{% endblock %}
