{% extends "layout.jinja2" %}
{% import "_forms.jinja2" as forms with context %}

{% block content %}

{% call forms.render_form(form) %}
    
    <legend>Change your password</legend>

    {{ forms.render_field(form.password) }}
    {{ forms.render_field(form.password_again) }}


    {{ form.submit(class="btn") }}
    
{% endcall %}
{% endblock %}
