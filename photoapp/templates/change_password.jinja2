{% extends "layout.jinja2" %}

{% block content %}

<form method="POST" action="{{ request.url }}">
    {{ form.csrf_token }}
    
    <legend>Change your password</legend>

    <div class="controls">
       {{ form.password.label }} 
       {{ form.password }}
    </div>

    <div class="controls">
       {{ form.password_again.label }} 
       {{ form.password_again }}
    </div>


    {{ form.submit(class="btn") }}
    
</form>

{% endblock %}
